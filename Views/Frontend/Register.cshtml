@model NetcoreKerryInventory.Models.User

@{
    ViewBag.Title = "ลงทะเบียน";
    Layout = "~/Views/Shared/_Authen.cshtml";
}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">ลงทะเบียนเข้าใช้งาน</h1>
                    </div>

                    @if(ViewBag.Message != null){
                    @Html.Raw( ViewBag.Message)
                    }
                   

                    <form asp-action="Register" method="post" class="user">
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input  asp-for="FirstName" type="text" class="form-control form-control-user" >
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" type="text" class="form-control form-control-user">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmailID" class="control-label"></label>
                            <input asp-for="EmailID" type="email" class="form-control form-control-user" >
                            <span asp-validation-for="EmailID" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateOfBirth" class="control-label"></label>
                            <input asp-for="DateOfBirth"  class="form-control form-control-user">
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" type="password" class="form-control form-control-user" >
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="confirmedPassword" class="control-label"></label>
                                <input asp-for="confirmedPassword" type="password" class="form-control form-control-user" >
                                <span asp-validation-for="confirmedPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <input type="submit" value="ลงทะเบียน" class="btn btn-primary btn-user btn-block"/>
                       
                        <hr>
                        <a href="/login" class="btn btn-google btn-user btn-block">
                            <i class="fab fa-google fa-fw"></i> ลงทะเบียนด้วย Google
                        </a>
                        <a href="/login" class="btn btn-facebook btn-user btn-block">
                            <i class="fab fa-facebook-f fa-fw"></i> ลงทะเบียนด้วย Facebook
                        </a>
                    </form>
                    <hr>
                    <div class="text-center">
                        <a class="small" href="#">ลืมรหัสผ่าน ?</a>
                    </div>
                    <div class="text-center">
                        <a asp-action="Login" asp-controller="Frontend" class="small">เป็นสมาชิกอยู่แล้ว เข้าสู่ระบบ</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>