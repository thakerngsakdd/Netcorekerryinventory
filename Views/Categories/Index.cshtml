@model IEnumerable<NetcoreKerryInventory.Models.Category>

@{
    ViewData["Title"] = "หมวดหมู่สินค้า";
}

<div class="card mx-4 my-5">


<div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <h4 class="mt-1 my-0 py-0">หมวดหมู่สินค้า</h4>
            </div>
            <div class="col-md-6 text-right">
                <a asp-action="Create" asp-controller="Categories" class="btn btn-success">เพิ่มหมวดหมู่สินค้า</a>
            </div>
        </div>
    </div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryStatus)
            </th>
            <th>
                    Manage
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryID" class="btn btn-sm btn-warning">แก้ไข</a> 
                <a asp-action="Details" asp-route-id="@item.CategoryID" class="btn btn-sm btn-info">เรียกดู</a> 
                <a asp-action="Delete" asp-route-id="@item.CategoryID" class="btn btn-sm btn-danger">ลบ</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>